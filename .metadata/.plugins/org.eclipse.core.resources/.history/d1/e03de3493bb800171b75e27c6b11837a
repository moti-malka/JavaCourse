package ClockPackage;

public class AppClock {

	public static void main(String[] args) {

		Clock motiClock = new Clock(0, 0, 0, 1000000000, "AMPM", false);

		motiClock.addHours(0);
		motiClock.addMinutes(0);
		motiClock.addSecound(0);
		motiClock.addmilisecound(100);

		motiClock.printTime(true);

	}
}