package ClockPackage;

public class Clock {
	private int HH;
	private int MM;
	private int SS;
	private int SSS;
	private String Text;
	private boolean AMPM;
	

	public Clock(int HH, int MM, int SS, int SSS, String Text, boolean AMPM) {
		this.HH = HH;
		this.MM = MM;
		this.SS = SS;
		this.SSS = SS;
		this.Text = Text;
		this.AMPM = AMPM;
		

	}

	public Clock() {
		this.HH = 14;
		this.MM = 07;
		this.SS = 53;
		this.SSS = 980;

	}

	public void setHours(int HH) {
		if (HH < 0 || HH > 1000000000) {
			return;
		} else {
			int tempHH = this.HH + HH;
			this.HH = (tempHH %24);

		}

	}

}
